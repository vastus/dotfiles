root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 4
indent_style = tab

[*.{go,rs}]
indent_size = 4
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab

[*.{java}]
indent_size = 4
indent_style = space
